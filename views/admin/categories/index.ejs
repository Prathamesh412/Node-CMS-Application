<%- include('../../partials/admin/admin-header') -%>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/admin/admin-topNav') -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <div class="container">

                <h3 class="alert alert-dark p-3 text-dark text-center">All Categories </h3>

                <div class="row">
                    <div class="col-6 mx-auto">
                        <table class="table table-bordered text-center border-success text-white">
                            <thead class="bg-primary">
                                <tr>
                                    <th>Title</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-hover bg-dark category-list">
                                <% cats.forEach(function(cat){ %>
                                <tr>
                                    <td><%= cat.title %></td>
                                    <td class="d-flex justify-content-center">
                                        <a href="/admin/category/edit/<%= cat._id %>"
                                            class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                                        <form action="/admin/category/<%= cat._id %>?newMethod=DELETE" method="post">
                                            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>

                        </table>
                    </div>
                </div>

                <hr>

                <div class="row p-4">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="category-title" name="title"
                                placeholder="Enter Title">
                        </div>
                        <button class="btn btn-outline-success btn-lg" id="create-category-button">Create
                            Category</button>
                    </div>
                </div>
                <!-- End of Main Content -->

                <%- include('../../partials/admin/admin-footer') -%>
</body>

</html>